<%= form_with(model: problem) do |form| %>
  <% if problem.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
        <% problem.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :admin_teacher_id, :value => 1 %>

  <div class="field">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, :value => @title%>
  </div>

  <div class="field">
    <% if @problem.image.attached? %>
      <%= image_tag @problem.image, style: "width: 200px; display: block"%>
    <% end %>

    <% form.label :image %>
    <%= form.file_field :image, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label "Dibujar el diagrama para un DCL", style: "display: block" %>
    <p>Circulo para nodos</p>
    <p>Circulo sin relleno para apoyo deslizante</p>
    <p>Triangulo para apoyo fijo</p>
    <p>rombo relleno para rotula</p>
    <p>rombo sin relleno para biela</p>
    <p>X para empotrado</p>
    <p>+ para momento</p>

    <div id="ggb-element"></div> 

    <h3>Pasos</h3>
    <div>
      <td>
        <%= form.check_box :step1 %>
        Representacion<br>   
      </td>
      <td>
        <%= form.check_box :step2 %>
        Determinar Cuerpos<br>  
      </td>
      <td>
        <%= form.check_box :step3 %>
        DCL<br>    
      </td>
      <td>
        <%= form.check_box :step4 %>
        Ecuaciones<br>    
      </td>
    </div>
    <h3>Dificultad</h3>
      <h4>Biela</h4>
      <div class="progress progress-striped">
        <div class="progress-bar progress-bar-info" role="progressbar"
            aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
            style="width: 0%">
          <span class="sr-only">20% completado</span>
        </div>
      </div>
      <h4>Rotula</h4>
      <div class="progress progress-striped">
        <div class="progress-bar progress-bar-info" role="progressbar"
            aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
            style="width: 0%">
          <span class="sr-only">20% completado</span>
        </div>
      </div>
      <h4>Apoyos</h4>
      <div class="progress progress-striped">
        <div class="progress-bar progress-bar-info" role="progressbar"
            aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
            style="width: <%= @difficulty_b %>%".format(@difficulty_b)>
          <span class="sr-only">20% completado</span>
        </div>
      </div>
      <h4>Fuerzas</h4>
      <div class="progress progress-striped">
        <div class="progress-bar progress-bar-info" role="progressbar"
            aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
            style="width: <%= @difficulty_f %>%">
          <span class="sr-only">20% completado</span>
        </div>
      </div>

    <h3>Construction State Listening</h3>

    <%= form.fields_for :structure do |s| %>
      <div class="field">
        <%= s.label :nodes_list %><br />
        <%= s.text_area :nodes_list, id: "myNodes"%>
      </div>
      <div class="field">
        <%= s.label :segments_list %><br />
        <%= s.text_area :segments_list, id: "mySegments" %>
      </div>
      <div class="field">
        <%= s.label :struct_link %><br />
        <%= s.text_area :struct_link, id: "mySavedLink" %>
      </div>
      <div class="field">
        <%= s.label :force_values %><br />
        <%= s.text_area :force_values, id: "myForceValues" %>
      </div>
      <div class="field">
        <%= s.label :moment_values %><br />
        <%= s.text_area :moment_values, id: "myMomentumValues" %>
      </div> 
      <%= s.hidden_field :admin_teacher_id, :value => 1 %>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_import_module_tag "packs/geogebra_edit" %>
