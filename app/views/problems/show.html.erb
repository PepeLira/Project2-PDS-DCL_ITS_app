

<div class="jumbotron text-center">
   <h2>Problems</h2>
</div>

<div class="container">
  <p style="color: green"><%= notice %></p>
  <h3> Problem Id: <%= @problem.id %></h3>
  <%= render @problem %>
  <h3>Dificultad</h3>
    <h4>Biela</h4>
    <div class="progress progress-striped">
      <div class="progress-bar progress-bar-info" role="progressbar"
          aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
          style="width: 0%">
        <span class="sr-only">20% completado</span>
      </div>
    </div>
    <h4>Rotula</h4>
    <div class="progress progress-striped">
      <div class="progress-bar progress-bar-info" role="progressbar"
          aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
          style="width: 0%">
        <span class="sr-only">20% completado</span>
      </div>
    </div>
    <h4>Apoyos</h4>
    <div class="progress progress-striped">
      <div class="progress-bar progress-bar-info" role="progressbar"
          aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
          style="width: <%= @difficulty_b %>%".format(@difficulty_b)>
        <span class="sr-only">20% completado</span>
      </div>
    </div>
    <h4>Fuerzas</h4>
    <div class="progress progress-striped">
      <div class="progress-bar progress-bar-info" role="progressbar"
          aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
          style="width: <%= @difficulty_f %>%">
        <span class="sr-only">20% completado</span>
      </div>
    </div><br>

  <h3>Ecuaciones</h3>
  <em>ΣFx = <%= @forces_ecuation_x %></em><br>
  <em>ΣFy = <%= @forces_ecuation_y %></em><br>
  <em>ΣM = <%= @moment_ecuation %></em><br>
  <div><br>
    <%= link_to "Edit problem", edit_problem_path(@problem) %>
  </div>
  <br>
  
  <%= button_to "Delete problem", @problem, method: :delete, :class => "btn btn-danger" %>

</div>

<div id="base64_id" base64=<%= @problem.structure.struct_link%> ></div>

<%= javascript_import_module_tag "packs/geogebra_show" %>